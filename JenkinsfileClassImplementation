@Library('gradle-shared-lib@2.0') import com.bmuschko.jenkins.Gradle
gradle = new Gradle(this)
pipeline {
    agent any

    triggers {
        pollSCM('*/5 * * * *')
    }

    stages {
     stage('Gradle version with global var') {
                steps {
                    script {
                        gradle.wrapper '-v'
                    }
                }
           }
    }
}

